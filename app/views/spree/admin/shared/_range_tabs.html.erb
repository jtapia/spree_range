<% content_for :page_title do %>
  <%= link_to Spree.t(:range), admin_ranges_path %> /
  <%= @range.name %>
<% end %>

<% content_for :sidebar do %>
  <ul class="nav nav-pills nav-stacked" data-hook="admin_range_tabs">
    <%= content_tag :li, class: ('active' if current == :categories) do %>
      <%= link_to_with_icon 'list-alt', Spree.t(:categories), spree.admin_range_categories_url(@range) %>
    <% end if can?(:admin, Spree::Range) %>
  </ul>
<% end %>